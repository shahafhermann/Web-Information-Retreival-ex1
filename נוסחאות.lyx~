\begin_layout Standard

\series bold
ג.

\series default
 נזכור ש- 
\begin_inset Formula $v_{1},\dots v_{d}$
\end_inset

 הוא בסיס של 
\begin_inset Formula $V$
\end_inset

.
 נסמן כל 
\begin_inset Formula $v\in V$
\end_inset

 ע
\begin_inset Quotes erd
\end_inset

י 
\begin_inset Formula $v=a_{1}v_{1}+\cdots+a_{d}v_{d}$
\end_inset

, כאשר לכל 
\begin_inset Formula $1\leq i\le d$
\end_inset

 מתקיים 
\begin_inset Formula $a_{i}\in\mathbb{R}$
\end_inset

.
 אזי:
\begin_inset Formula 
\[
Pv=\left(\sum_{i=1}^{k}v_{i}v_{i}^{T}\right)\left(a_{1}v_{1}+\cdots+a_{d}v_{d}\right)=\sum_{i=1}^{k}v_{i}v_{i}^{T}a_{1}v_{1}+\cdots+v_{i}v_{i}^{T}a_{i}v_{i}+\cdots+v_{i}v_{i}^{T}a_{d}v_{d}=
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\sum_{i=1}^{k}a_{1}v_{i}v_{i}^{T}v_{1}+\cdots+a_{i}v_{i}v_{i}^{T}v_{i}+\cdots+a_{d}v_{i}v_{i}^{T}v_{d}=
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\sum_{i=1}^{k}a_{1}v_{i}\cdot0+\cdots+a_{i}v_{i}\cdot1+\cdots a_{d}v_{i}\cdot0=\sum_{i=1}^{k}a_{i}v_{i}=v
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\blacksquare
\]

\end_inset


