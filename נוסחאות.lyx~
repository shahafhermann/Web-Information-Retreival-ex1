\begin_layout Standard
יהי 
\begin_inset Formula $x\in Im\left(A^{T}\right)$
\end_inset

, אז קיים 
\begin_inset Formula $u\in\mathbb{R}^{d}$
\end_inset

 כך ש- 
\begin_inset Formula $A^{T}\cdot u=x$
\end_inset

.
 נשים לב שלכל 
\begin_inset Formula $y\in Ker(A)$
\end_inset

 מתקיים:
\begin_inset Formula 
\[
\left\langle x,y\right\rangle =x^{T}\cdot y=\left(A^{T}\cdot u\right)^{T}\cdot y=u^{T}\cdot A\cdot y=u^{T}\cdot0=0
\]

\end_inset


\end_layout

\begin_layout Standard
כאשר השוויון הלפני אחרון נובע מכך ש- 
\begin_inset Formula $y\in Ker(A)$
\end_inset

 ולכן 
\begin_inset Formula $A\cdot y=0$
\end_inset

.
\end_layout

\begin_layout Standard
מכאן נובע ש- 
\begin_inset Formula $x\in Ker(A)^{\bot}$
\end_inset

 מההגדרה ולכן 
\begin_inset Formula $Im\left(A^{T}\right)\subseteq Ker\left(A\right)^{\bot}$
\end_inset

.
\end_layout

\begin_layout Standard
בכיוון השני, יהי 
\begin_inset Formula $x\in Im\left(A^{T}\right)^{\bot}$
\end_inset

, אז לכל 
\begin_inset Formula $y\in Im\left(A^{T}\right)$
\end_inset

 מתקיים ש- 
\begin_inset Formula $\left\langle x,y\right\rangle =0$
\end_inset

, ובפרט עבור 
\begin_inset Formula $A^{T}\left(A\cdot x\right)\in Im\left(A^{T}\right)$
\end_inset

.
 כעת נקבל:
\begin_inset Formula 
\[
\left\langle A^{T}\left(A\cdot x\right),x\right\rangle =0\Longrightarrow\left\langle A^{T}\left(A\cdot x\right),x\right\rangle =\left(A^{T}A\cdot x\right)^{T}\cdot x=x^{T}A^{T}Ax=\left\langle Ax,Ax\right\rangle =0
\]

\end_inset


\end_layout

\begin_layout Standard
נזכור ש- 
\begin_inset Formula $\left\langle z,z\right\rangle =0\Longrightarrow z=0$
\end_inset

 ומכאן ש- 
\begin_inset Formula $Ax=0$
\end_inset

, כלומר 
\begin_inset Formula $x\in Ker(A)$
\end_inset

, ולכן 
\begin_inset Formula $Im\left(A^{T}\right)^{\bot}\subseteq ker(A)$
\end_inset

.
\end_layout

\begin_layout Standard
כעת עבור 
\begin_inset Formula $U,V\subseteq\mathbb{R}^{n}$
\end_inset

 מתקיים 
\begin_inset Formula $U\subseteq V\Longrightarrow V^{\bot}\subseteq U^{\bot}$
\end_inset

, ולכן 
\begin_inset Formula $Ker(A)^{\bot}\subseteq\left(Im\left(A^{T}\right)^{\bot}\right)^{\bot}=Im\left(A^{T}\right)$
\end_inset

.
\end_layout

\begin_layout Standard
הראינו הכלה דו כיוונית ולכן 
\begin_inset Formula $Im\left(A^{T}\right)=Ker(A)^{\bot}$
\end_inset

.
\begin_inset Formula 
\[
\blacksquare
\]

\end_inset


\end_layout

